<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#0a0a0a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to OpenCode"
        android:textColor="#fff"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your OpenCode server details"
        android:textColor="#888"
        android:textSize="16sp"
        android:layout_marginBottom="48dp" />

    <EditText
        android:id="@+id/serverUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:hint="Server URL (e.g., http://192.168.1.100:4096)"
        android:textColorHint="#666"
        android:textColor="#fff"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:hint="Password (if required)"
        android:textColorHint="#666"
        android:textColor="#fff"
        android:padding="16dp"
        android:inputType="textPassword"
        android:layout_marginBottom="32dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:indeterminateTint="#6366f1" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6366f1"
        android:text="Connect"
        android:textColor="#fff"
        android:textSize="16sp"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run 'opencode serve' on your computer first"
        android:textColor="#666"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        android:gravity="center" />

</LinearLayout>
